<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<!-- Materialize js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.6.1/jquery.flexslider.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.1.0/masonry.pkgd.min.js"></script>
<script type="text/javascript">
    $('.modal').modal();
    $('.modal').tabs('select_tab','log-tab');
    $('.parallax').parallax();
</script>

<script type="text/javascript">
    jQuery(document).ready(function($) {
        
        // smooth scroll
        $(document).on('click', 'a[href^="#"]', function (event) {
    event.preventDefault();

    $('html, body').animate({
        scrollTop: $($.attr(this, 'href')).offset().top
    }, 500);
        });
        
        //create the slider
        $(".cd-testimonials-wrapper").flexslider({
            selector: ".cd-testimonials > li",
            animation: "slide",
            controlNav: true,
            slideshow: false,
            smoothHeight: true,
            start: function() {
                $(".cd-testimonials")
                    .children("li")
                    .css({
                        opacity: 1,
                        position: "relative"
                    });
            }
        });


        $("#login_btn").click(function () {
        
            //console.log(document.getElementById("email").value);
            
            $.ajax({
                url: '/signin',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    email:document.getElementById("email").value,
                    password:document.getElementById("password").value
                }),
                error: function(e) {
                    console.log("Error: ",e);
                },
                success: function(data) {
                    console.log(data);
                    window.localStorage.setItem("id",data.user._id);
                    window.location = "/app/" + data.user._id;
                }
            });
        });
        
        $("#signup_btn").click(function () {
            
            console.log("name", document.getElementById("name-su").value);
            console.log("email", document.getElementById("email-su").value);
              $.ajax({
                url: '/signup',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    name:document.getElementById("name-su").value,
                    email:document.getElementById("email-su").value,
                    password:document.getElementById("password-su").value
                }),
                error: function(e) {
                    console.log("Error: ",e);
                },
                success: function(data) {
                    console.log(data);
                    window.location = "/app/" + data.user._id;
                }
            });
        });
        
        $("#show_signup").click(function () {
           $(this).css("color","purple"); 
           $("#show_login").css("color","blue");    
           $(".login").css("display","none");
           $(".signup").css("display","block");    
        });
        
         $("#show_login").click(function () {
           $(this).css("color","purple"); 
           $("#show_signup").css("color","blue");      
           $(".login").css("display","block");
           $(".signup").css("display","none");    
        });
        
        $("#app-btn").click(function() {
            if (window.localStorage.getItem("id")){
                window.location = "/app/" + window.localStorage.getItem("id");
            }else{
                $('#log2').modal('open');
            }
        });
    });

</script>
